<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Posts</h1>
    <%= link_to "New Post", new_post_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

<%= search_form_for @q do |f| %>
  <%= f.label :content_cont, "Search posts", class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= f.search_field :content_cont, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  <%= f.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-2" %>
<% end %>

<%= sort_link(@q, :created_at, "Sort by Date") %>

<div class="mt-4">
<% @posts.each do |post| %>
  <div class="post">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="flex items-center mb-4">
            <p><%= post.content %></p>
            <p>Posted by: <%= post.user.name %></p>
            <div class="text-gray-600 text-sm ml-4"><%= time_ago_in_words(post.created_at) %> ago</div>
        </div>
        <p class="text-gray-700 text-base mb-4"><%= post.content %></p>
        <% if post.image.attached? %>
          <%= image_tag post.image, class: "w-full rounded-lg" %>
        <% end %>
      </div>
    <!-- Add other post details as needed -->
  </div>
  <!-- Display post information -->
<% end %>
</div>

<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
